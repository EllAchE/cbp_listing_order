{
    "compileOnSave": true,
    "compilerOptions": {
      "downlevelIteration": true,
      "incremental": true,
      "lib": ["ES2020"],
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true
    },
    "include": ["src", "types"]
  }